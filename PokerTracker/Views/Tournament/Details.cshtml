@model PokerTracker.ViewModels.Tournaments.TournamentDetailsViewModel

@{
    ViewData["Title"] = Model.Name;

    // Status Colors Logic
    string statusBadgeClass = Model.Status switch
    {
        "Open" => "bg-primary",
        "Running" => "bg-success",
        _ => "bg-secondary"
    };
}

<div class="container py-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="mb-3">
        <a asp-controller="Tournament" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to All Tournaments
        </a>
    </div>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg overflow-hidden">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="w-100" style="height: 300px; object-fit: cover;" alt="@Model.Name">
                }
                else
                {
                    <img src="~/images/default-tournament.jpg" class="w-100" style="height: 300px; object-fit: cover;" alt="Default Image">
                }

                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge @statusBadgeClass mb-2">@Model.Status</span>
                            <h1 class="display-5 fw-bold">@Model.Name</h1>
                            <p class="text-muted lead">
                                <i class="bi bi-person-circle me-1"></i> Hosted by @Model.Creator
                            </p>
                        </div>

                        <div class="text-end">
                            @if (Model.IsOwner)
                            {
                                @if (Model.Status == "Open")
                                {
                                    <form asp-action="Start" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-success me-2 shadow-sm"
                                                onclick="@(Model.Date > DateTime.Now ? $"return confirm('Warning: This tournament is scheduled for {Model.Date:MMM dd, HH:mm}. Are you sure you want to start it early?')" : "")">
                                            <i class="bi bi-play-fill"></i> Start Game
                                        </button>
                                    </form>

                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2 shadow-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }
                                else if (Model.Status == "Running")
                                {
                                    <form asp-action="Finish" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-dark me-2 shadow-sm">
                                            <i class="bi bi-flag-fill"></i> End Game
                                        </button>
                                    </form>
                                }
                                else if (Model.Status == "Finished" && string.IsNullOrEmpty(Model.WinnerName))
                                {
                                    <a asp-action="SelectWinner" asp-route-id="@Model.Id" class="btn btn-primary me-2 shadow-sm">
                                        <i class="bi bi-trophy"></i> Set Winner
                                    </a>
                                }

                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger shadow-sm">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Status != "Open")
    {
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(45deg, #FFD700, #FDB931);">
                <div class="card-body text-center p-3 d-flex justify-content-center align-items-center">
                    <i class="bi bi-trophy-fill fs-2 text-white me-3" style="text-shadow: 0 1px 2px rgba(0,0,0,0.2);"></i>
                    <div>
                        <span class="text-white fw-bold text-uppercase small d-block" style="letter-spacing: 1px; line-height: 1;">Winner</span>
                            @if (Model.WinnerName == null)
                            {
                                <span class="h3 fw-bolder text-white mb-0">To be announced...</span>
                                
                            }
                            else {
                            <span class="h3 fw-bolder text-white mb-0">@Model.WinnerName</span>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h4 class="mb-0">Tournament Details</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="bi bi-calendar-check fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Start Date</small>
                                    <strong>@Model.Date.ToString("dddd, MMM dd, yyyy")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="bi bi-clock fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Time</small>
                                    <strong>@Model.Date.ToString("HH:mm")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="bi bi-ui-checks-grid fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Format</small>
                                    <strong>@Model.Format</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5>Description</h5>
                    <p class="text-secondary">@Model.Description</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-4">
                    @if (Model.IsJoined)
                    {
                        <div class="alert alert-success mb-3 fw-bold">
                            <i class="bi bi-check-circle-fill me-2"></i> You are registered!
                        </div>

                        @if (Model.Status == "Open")
                        {
                            <form asp-controller="Tournament" asp-action="Leave" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger w-100 shadow-sm">
                                    <i class="bi bi-box-arrow-left me-1"></i> Leave Tournament
                                </button>
                            </form>
                        }
                    }
                    else if (Model.Status == "Open")
                    {
                        <form asp-controller="Tournament" asp-action="Join" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm pulse-button">
                                Join Tournament
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg w-100" disabled>
                            Registration Closed
                        </button>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        Players <span class="badge bg-secondary rounded-pill ms-2">@Model.Players.Count</span>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.Players.Any())
                    {
                        @foreach (var player in Model.Players)
                        {
                            <li class="list-group-item d-flex align-items-center py-3">
                                <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3"
                                     style="width: 40px; height: 40px;">
                                    <i class="bi bi-person text-secondary"></i>
                                </div>
                                <span class="fw-medium">@player.Name</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted py-4">
                            No players yet. Be the first!
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>