@model PokerTracker.ViewModels.Tournaments.TournamentDetailsViewModel

@{
    ViewData["Title"] = "Delete Tournament";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Tournament?</h4>
                </div>
                <div class="card-body text-center p-5">
                    <h3 class="text-danger mb-4">Are you sure?</h3>
                    <p class="lead">
                        You are about to delete <strong>"@Model.Name"</strong>.
                    </p>
                    <p class="text-muted mb-4">
                        This action cannot be undone. The tournament will be removed from the public list.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">
                            Cancel
                        </a>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger btn-lg">
                                Yes, Delete it
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>